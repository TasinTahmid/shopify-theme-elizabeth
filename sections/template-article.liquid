<h1>{{ article.title }}</h1>

<small>{{ article.author }}</small>

<time datetime="{{ article.published_at |  date:'%y-%m-%d' }}">{{ article.published_at | date: '%y-%m-%d' }}</time>

<img src="{{ article.image | img_url: 'large' }}" alt="{{article.image.alt}}">
{% comment %} <img src="{{ article.image | image_url: width: 100%, height: 100%}}" alt="{{article.image.alt}}"> {% endcomment %}

<div>{{ article.content }}</div>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "default": true,
      "label": "Display Author Name"
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "default": true,
      "label": "Display Published Date"
    }
  ],
  "blocks": [
    {
      "type": "article_titile",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
