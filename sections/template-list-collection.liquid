<div class="list-collection-section">
  <h1 class="list-collection-heading">{{ section.settings.title }}</h1>

  <div class="max-w-6xl mx-auto my-3">
    <div class="collection-grid">
      {% for collection in collections %}
        {% if collection.all_products_count > 0 %}
          <div class="collection-card-wrapper">
            <div class="collection-card">
              <a href="{{ collection.url }}" class="collection-link">
                <div class="collection-card-image-wrapper">
                  {% if collection.featured_image != blank %}
                    {% assign collection_image = collection.featured_image %}
                  {% else %}
                    {% assign collection_image = collection.products.first.image %}
                  {% endif %}
                  {% if collection_image %}
                    <img
                      class="collection-card-image"
                      src="{{ collection_image |  image_url }}"
                      alt="{{ collection.title | escape }}"
                      width="240"
                      height="240"
                    >
                  {% else %}
                    {{
                      'collection-1'
                      | placeholder_svg_tag: 'w-full h-full object-cover border transition duration-1000 ease-in-out trasform hover:scale-105'
                    }}
                  {% endif %}
                </div>
                <div class="collection-details ">
                  <h1 class="collection-title">{{ collection.title }}</h1>
                </div>
              </a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Template List Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "All collections",
      "label": "Title"
    }
  ]
}
{% endschema %}
