<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}
    <link rel="stylesheet" href="{{ 'global.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'header.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'featured-collection.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'contact-form.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'collection.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'list-collection.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'cart-section.css' | asset_url }}">

    <link rel="stylesheet" href="{{ 'page.css' | asset_url }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    {% comment %} {{ 'https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js' | script_tag }} {% endcomment %}
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>

  <body>
    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}
    </main>
  </body>
</html>
